{
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	},
	"compilerOptions": {
		"baseUrl": "./src",
		"moduleResolution": "node",
		"target": "es2022",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"paths": {
			"@Application/*": [
				"Application/*"
			],
			"@Domain/*": [
				"Domain/*"
			],
			"@Infrastructure/*": [
				"Infrastructure/*"
			]
		}
	},
	"include": [
		"./src",
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}